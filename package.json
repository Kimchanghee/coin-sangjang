{
  "name": "coin-sangjang",
  "version": "0.1.0",
  "private": true,
  "description": "Multilingual automated trading platform reacting to Korean exchange listings.",
  "author": "",
  "license": "UNLICENSED",
  "workspaces": [
    "frontend",
    "backend",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/node": "^22.7.4",
    "eslint": "^9.13.0",
    "execa": "^8.0.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "turbo": "^2.1.1",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix",
    "*.{json,md,css,scss,html}": "prettier --write"
  },
  "packageManager": "npm@11.5.2"
}
